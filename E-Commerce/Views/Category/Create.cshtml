@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">

   
    <div class="row">

        <div class="col-12 text-center">

            <h2 class="text-white py-2">Create category</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form class="" method="post">

            <div class="border-4  shadow-sm p-3">
                

                @*    <div asp-validation-summary="ModelOnly"> *@

                @* </div> *@

                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                    <label class ="ms-2">Category Name</label>
                   
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3  form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" type="text" class="form-control border-0 shadow" />
                    <label class="ms-2">Display Order</label>
                    <span asp-validation-for="DisplayOrder" class="text -danger"></span>

                </div>

                <div class="row pt-2">


                    <div class="col-6 col-md-3">
                        <button class="btn btn-primary form-control " type="submit">Create</button>
                    </div>
                    <div class="col-6  col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control">Back to list</a>
                    </div>
                </div>






            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}