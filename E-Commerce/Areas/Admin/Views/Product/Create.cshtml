@model Products

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">

   
    <div class="row">

        <div class="col-12 text-center">

            <h2 class="text-white py-2">Create Product</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form class="" method="post">

            <div class="border-4  shadow-sm p-3">
                

                @*    <div asp-validation-summary="ModelOnly"> *@

                @* </div> *@

                <div class="mb-3 form-floating py-2 col-12">
                    <input asp-for="Title" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2">Product Name</label>
                   
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3  form-floating py-2 col-12">
                    <input asp-for="Description" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2">Description</label>
                    <span asp-validation-for="Description" class="text -danger"></span>

                </div>

                <div class="mb-3  form-floating py-2 col-12">
                    <input asp-for="ISBN" type="text" class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2">ISBN</label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>

                </div>

                <div class="mb-3  form-floating py-2 col-12">
                    <input asp-for="Author" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2">Author</label>
                    <span asp-validation-for="Author" class="text-danger"></span>

                </div>

                <div class="mb-3  form-floating py-2 col-12">
                    <input asp-for="ListPrice" type="text" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2">List Price</label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>

                </div>

                <div class="mb-3  form-floating py-2 col-12">
                    <input asp-for="Price" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2">Price</label>
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>

                <div class="mb-3  form-floating py-2 col-12">
                    <input asp-for="Price50" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="ms-2">Price50</label>
                    <span asp-validation-for="Price50" class="text-danger"></span>

                </div>

                <div class="mb-3  form-floating py-2 col-12">
                    <input asp-for="Price100" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price100" class="ms-2">Price100</label>
                    <span asp-validation-for="Price100" class="text-danger"></span>

                </div>

                <div class="row pt-2">


                    <div class="col-6 col-md-3">
                        <button class="btn btn-primary form-control " type="submit">Create</button>
                    </div>
                    <div class="col-6  col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">Back to list</a>
                    </div>
                </div>






            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}